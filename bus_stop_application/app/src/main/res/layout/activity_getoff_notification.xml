<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300sp"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".GetOffNotificationActivity">>

    <TextView
        android:id="@+id/tv_getOff_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/notification_get_off_1"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_getOff_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/notification_get_off_2"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/tv_getOff_1" />

    <Button
        android:id="@+id/btn_notificationOk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="@string/btn_ok"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv_getOff_2" />


</LinearLayout>